<h1>Blogs||<%= link_to 'New Blog', new_blog_path %></h1>

<div style="margin:0 auto;display:block;">
  <% @blogs.each do |blog| %>
    <div style="display:block;text-align:center;margin-bottom:30px;border-bottom:1px solid #ccc;padding-bottom:30px;">

      <!-- title -->
      <p style="font-size:17px;margin:5px 0 20px 0;width:80%;margin:0 auto;"><%= blog.b_title %></p>

      <!-- Image -->
      <div style="width:300px;margin:20px auto 0 auto;border-radius:20px;height:300px;position:relative;">
        <a target="_blank" href="<%= blog.b_link %>"><img style="padding:20px;width:100%;position:absolute;top:50%;left:50%;transform:translate(-50%, -50%);object-fit:contain;" src="<%= blog.b_image %>"></a>
      </div>

      <hr style="color:#000;width:10%;margin:20px auto 0 auto;">
      <!-- rating & reviews -->
      <div style="font-size:17px;font-weight:bold;">
        <!-- <p style="margin-top:10px;"><span style="margin-right:10px;">‚≠ê&nbsp;&nbsp;<%= blog.b_rating %></span><span>üë§&nbsp;<%= blog.b_reviews %> +</span> </p> -->
        <p style="margin-top:10px;"><span style=""><%= blog.b_rating %></span> / <span><%= blog.b_reviews %>+</span> </p>
      </div>

      <!-- pricing -->
      <div style="">
        <p><span style="font-size:30px;color:#845cd6;font-weight:bold;vertical-align:sub;"><%= number_to_currency(blog.b_is_price) %></span><span style="font-size:16px;background:#845cd6;color:#fff;padding:3px 15px;border-radius:20px;margin-left:10px;"><span style="text-decoration:line-through;color:#fff;margin:0 7px;font-size:17px;"><%= number_to_currency(blog.b_was_price) %></span><%= number_to_percentage(blog.b_pct, precision: 0) %> OFF</span></p>
      </div>

      <!-- btn -->
      <a style="display:block;background:#b299e5;color:#fff;width:60%;text-align:center;margin:20px auto 10px auto;padding:10px;border-radius:20px;text-decoration:none;" target="_blank" href="<%= blog.b_link %>">Get this deal</a>
      <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
      <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </div>
    
  <% end %>

</div>

<br/>
