<h1>Posts // <%= link_to 'New Post', new_post_path %></h1>
<div>
  
  <div style="width:500px;margin:0 auto;">  
    <% @posts.each do |post| %>
      <div style="margin-bottom:20px;text-align:center;border-bottom:2px solid #000;padding-bottom:30px;">

        <div style="width:300px;height:230px;margin:0 auto;position:relative;border:2px solid #000;border-radius:20px;">
          <a target="_blank" href="<%= post.link %>"><img src="<%= post.image %>" style="width:90%;height:90%;object-fit:contain;transform:translate(-50%, -50%);top:50%;left:50%;position:absolute;"></a>
        </div>

        <div style="padding:10px 15px;">
          <p style="word-break: break-all;line-height: 1.4;height:2.8em;overflow: hidden;display: -webkit-box;display: -ms-flexbox;vertical-align: top;text-overflow: ellipsis;-webkit-box-orient: vertical;-webkit-line-clamp:2;margin:10px 15px;"><%= post.title %></p>

          <div style="margin:10px 0 25px 0;">
            <% if post.rating.present? %>
              <p style="margin-bottom:20px;font-size:17px;font-weight:bold;"><span style="margin-right:10px;background-color:yellow;padding:5px;border:2px solid;border-radius:10px;">평점: <%= post.rating %></span><span style="background-color:yellow;padding:5px;border-radius:10px;border:2px solid;">리뷰 수: <%= post.reviews %>개</span></p>
            <% end %>

            <span style="font-size:25px;margin-right:7px;font-weight:bold;"><%= post.is_price %>원</span><span style="text-decoration:line-through;color:#ccc;margin-right:10px;font-weight:bold;font-size:18px;"><%= post.was_price %>원</span><span style="font-size:18px;text-align:center;background-color:#000;color:#fff;padding:7px;border-radius:15px;"><%= post.pct %>% OFF</span>
          </div>

          <div>
            <a target="_blank" style="text-align:center;background:#000;color:#fff;padding:10px;width:80%;display:block;border-radius:15px;margin-top:15px;margin:0 auto;text-decoration:none;" href="<%= post.link %>">사러가기</a>
          </div>
        </div>

        <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>

    <% end %>
  </div>

  <div style="text-align:center;">
    <p style="color:#ccc;">ㄹㅇㅁㄹㅇㄴㅁㄹㄴ</p>
  </div>
</div>